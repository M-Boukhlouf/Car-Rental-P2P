@model RegistrationViewModel

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h5>
    The creation of an account will facilitate your reservations and advertisments.
</h5>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="form-group">
                <label asp-for="Registration.Username" class="control-label">Username :*</label>
                <input asp-for="Registration.Username" class="form-control" />
                <span asp-validation-for="Registration.Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Registration.FirstName" class="control-label">First name :*</label>
                <input asp-for="Registration.FirstName" class="form-control" />
                <span asp-validation-for="Registration.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.LastName" class="control-label">Last name :*</label>
                <input asp-for="Registration.LastName" class="form-control" />
                <span asp-validation-for="Registration.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Registration.DateOfBirth" class="control-label">Date of birth :</label>
                <input asp-for="Registration.DateOfBirth" class="form-control" />
                <span asp-validation-for="Registration.DateOfBirth" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Registration.Civility" class="control-label">Civility :*</label>
                <select class="form-control asp-for="Civility" asp-items="Html.GetEnumSelectList<Civility>()">
                    <option selected="selected" value="">select civility</option>
                </select>

                <span asp-validation-for="Registration.Civility" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="Registration.Email" class="control-label">Email :*</label>
                <input asp-for="Registration.Email" class="form-control" />
                <span asp-validation-for="Registration.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Registration.Password" class="control-label">Password :*</label>
                <input asp-for="Registration.Password" class="form-control" />
                <span asp-validation-for="Registration.Password" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Registration.Countrycode" class="control-label">Country code :*</label>
                <input asp-for="Registration.Countrycode" class="form-control" />
                <span asp-validation-for="Registration.Countrycode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Address" class="control-label">Adress :</label>
                <input asp-for="Registration.Address" class="form-control" />
                <span asp-validation-for="Registration.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.ZipCode" class="control-label">Zip code :</label>
                <input asp-for="Registration.ZipCode" class="form-control" />
                <span asp-validation-for="Registration.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.City" class="control-label">City :*</label>
                <input asp-for="Registration.City" class="form-control" />
                <span asp-validation-for="Registration.City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Advertisements/CreateAd">Do you want to post an offer in our website ? Click here to add an advertisement </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
