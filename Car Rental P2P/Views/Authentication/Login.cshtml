@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>login form</title>
    <link rel="stylesheet" href="bootstrap.min.css" />
    <link rel="stylesheet" href="Contact-Form-Clean.css" />
    <link rel="stylesheet" href="styles.css" />
    <link href="~/css/loginForm.css" rel="stylesheet" />
</head>

    <body>
        <div class="contact-clean">
            <form method="post">
                <h2 class="text-center">LOG IN</h2>
                <div class="form-group">
                    <label for="inputEmail" class="sr-only">Username</label>
                    @Html.TextBoxFor(model => model.Authentication.Username, new { id = "inputEmail", @class = "form-control", placeholder = "Username", required = "", autofocus = "" })

                </div>
                <div class="form-group">
                    <label for="inputPassword" class="sr-only">Password</label>
                    @Html.PasswordFor(model => model.Authentication.Password, new { id = "inputPassword", @class = "form-control", placeholder = "Password", required = "" })
                </div>
                <div class="form-group"><button class="btn btn-primary" type="submit">Log in</button></div>
                <div class="form-group">

                    You don't have an account ? @Html.ActionLink("Click here to register", "Register")
                </div>

            </form>
        </div>
    </body>
</html>